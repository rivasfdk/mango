<% title "Almacenes" %>
<% if @warehouse_types.any? %>
<div id="warehouse_types-content" class="yui3-g">
  <% @warehouse_types.each do |t| %>
  <div class="module yui3-u-1-2">
    <% if t.content_type == true %>
      <%= link_to image_tag('ingredients-icon.png', :alt=>'icon', :class=>'icon', :width=>'64', :height=>'64'), warehouse_type_path(t) %>
    <% else %>
      <%= link_to image_tag('products-icon.png', :alt=>'icon', :class=>'icon', :width=>'64', :height=>'64'), warehouse_type_path(t) %>
    <% end %>
      <div class="module-content">
        <h2><%= link_to t.name, warehouse_type_path(t) %></h2>
        <p><%= render_action_edit(edit_warehouse_type_path(t)) %></p>
        <p><%= render_action_delete(warehouse_type_path(t), "Desea borrar el almacen '#{t.name}'?") %></p>
      </div>
  </div>
  <% end %>
</div>
<% else %>
  <p>No se han creado almacenes</p>
<% end %>

