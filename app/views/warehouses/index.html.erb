<% title "Alamacen de materias primas" %>
<% i = 0 %>
<% if @warehouses.any? %>
<table id="tabledata">
    <thead>
      <tr>
        <th>Código<span class="order_arrow"></span></th>
        <th>Nombre<span class="order_arrow"></span></th>
        <th>Materia prima<span class="order_arrow"></span></th>
        <th>Existencia<span class="order_arrow"></span></th>
        <th>Capacidad<span class="order_arrow"></span></th>
        <th>Ubicación</th>
        <th class="actions_small">Acciones</th>
      </tr>
    </thead>
    <tbody>

    <% @warehouses.each do |w| %>
      <% class_row, i = alternate_row_class(i) %>
      <tr class="<%= class_row %>">
        <td class="center"><%=h w.code %></td>
        <td><%=h w.name %></td>
        <td><%=h w.ingredient.name %></td>
        <td><%=h w.stock %></td>
        <td><%=h w.size %></td>
        <td><%=h w.location %></td>
        <td class="center">
          <%= render_action_edit(edit_warehouse_path(w)) %>
          <%= render_action_delete(warehouse_path(w), "Desea borrar el almacen de materia prima '#{w.name}'?") %><br />
        </td>
      </tr>
    <% end %>
    </tbody>
</table>
<div id="tablefooter">
  <div id="pagination">
    <%=raw show_pagination @warehouses %>
  </div>
</div>
      

<% else %>
<p>No hay materias primas asociadas a este almacen</p>
<% end %>


