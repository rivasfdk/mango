      <h2><%= link_to 'Batches', batches_path %></h2>
      <p>Control y gestión de batches</p>
    </div>
  </div>
  <% end %>

  <!-- Orders -->
  <% if session[:permissions].include?('orders') %>
  <div class="module yui3-u-1-2">
    <%= link_to image_tag('orden-de-produccion-icon.png', :alt=>'icon', :class=>'icon', :width=>'64', :height=>'64'), orders_path %>
    <div class="module-content">
      <h2><%= link_to 'Órdenes de Producción', orders_path %></h2>
      <p>Gestión de las órdenes de producción</p>
    </div>
  </div>
  <% end %>

  <!-- Recipes -->
  <% if session[:permissions].include?('recipes') %>
  <div class="module yui3-u-1-2">
    <%= link_to image_tag('recetas-icon.png', :alt=>'icon', :class=>'icon', :width=>'64', :height=>'64'), recipes_path %>
    <div class="module-content">
      <h2><%= link_to 'Recetas', recipes_path %></h2>
      <p>Manejo de recetas de producción</p>
    </div>
  </div>
  <% end %>

  <!-- Medicament recipes -->
  <% if session[:permissions].include?('medicament_recipes') %>
  <div class="module yui3-u-1-2">
    <%= link_to image_tag('medicaments-recipes-icon.png', :alt=>'icon', :class=>'icon', :width=>'64', :height=>'64'), medicament_recipes_path %>
    <div class="module-content">
      <h2><%= link_to 'Recetas de medicamentos', medicament_recipes_path %></h2>
      <p>Manejo de recetas de medicamentos</p>
    </div>
  </div>
  <% end %>

  <!-- Scales and hoppers -->
  <% if session[:permissions].include?('scales') %>
  <div class="module yui3-u-1-2">
    <%= link_to image_tag('tolvas-icon.png', :alt=>'icon', :class=>'icon', :width=>'64', :height=>'64'), scales_path %>
    <% if @hoppers_transactions_enabled and @critical_hoppers > 0 %>
      <%= link_to @critical_hoppers, scales_path, :class => 'notify' %>
    <% end %>
    <div class="module-content">
      <h2><%= link_to 'Balanzas y tolvas', scales_path %></h2>
      <% if @hoppers_transactions_enabled %>
        <% if @critical_hoppers == 1 %>
          <p class="palert"><%= @critical_hoppers %> tolva en nivel crítico</p>
        <% elsif @critical_hoppers > 1 %>
          <p class="palert"><%= @critical_hoppers %> tolvas en nivel crítico</p>
        <% else %>
          <p>Gestión de balanzas y tolvas</p>
        <% end %>
      <% else %>
        <p>Gestión de balanzas y tolvas</p>
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- Ingredients -->
  <% if session[:permissions].include?('ingredients') %>
  <div class="module yui3-u-1-2">
    <%= link_to image_tag('ingredients-icon.png', :alt=>'icon', :class=>'icon', :width=>'64', :height=>'64'), ingredients_path %>
    <% if @transactions_enabled and @critical_ingredients > 0 %>
      <%= link_to @critical_ingredients, ingredients_path, :class => 'notify' %>
    <% end %>
    <div class="module-content">
      <h2><%= link_to 'Materia Prima', ingredients_path %></h2>
      <% if @transactions_enabled %>
        <% if @critical_ingredients > 0 %>
          <p class="palert"><%= @critical_ingredients %> materia prima en nivel crítico</p>
        <% else %>
          <p>Manejo de los ingredientes</p>
        <% end %>
      <% else %>
        <p>Manejo de los ingredientes</p>
      <% end %>
    </div>
  </div>
  <% end %>

