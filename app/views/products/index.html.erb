<% title "Productos terminados" %>
<% i = 0 %>
<div id="searchform">
<%= form_tag products_path, :method => 'get' do %>
  <label for="code">Código o nombre:</label>
  <%= text_field_tag :search, params[:search]%>
  <%= submit_tag "Filtrar", :name => nil %>
<% end %>
</div>
<% if @products.any? %>
<table id="tabledata">
    <thead>
      <tr>
        <th>Código<span class="order_arrow"></span></th>
        <th>Nombre<span class="order_arrow"></span></th>
        <th class="actions_small">Acciones</th>
      </tr>
    </thead>
    <tbody>
    <% @products.each do |p| %>
      <% class_row, i = alternate_row_class(i) %>
      <tr class="<%= class_row %>">
        <td><%=h p.code %></td>
        <td><%=h p.name %></td>
        <td>
          <%= render_action_edit(edit_product_path(p)) %>
          <%= render_action_delete(product_path(p), "Desea borrar el producto terminado '#{p.name}'?") %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>
<div id="tablefooter">
  <div id="pagination">
    <%=raw show_pagination @products %>
  </div>
</div>
<% else %>
<p>No hay productos terminados registrados</p>
<% end %>
